{
    "semi": true,
    "tabWidth": 4,
    "printWidth": 80,
    "singleQuote": true,
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "bracketSameLine": false,
    "arrowParens": "always",
    "endOfLine": "lf",
    "overrides": [
      {
        "files": ["*.json"],
        "options": {
          "semi": true,
          "tabWidth": 2
        }
      },
      {
        "files": ".prettierrc",
        "options": { "parser": "json", "tabWidth": 2 }
      }
    ]
  }
  