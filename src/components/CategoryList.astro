---
import CategoryBadge from './CategoryBadge.astro';

interface Props {
    categories: { name: string; count: number }[];
    highlightedCategories?: string[];
    headerLevel: 'H2' | 'H3';
}

const { categories, highlightedCategories = [], headerLevel } = Astro.props;
---

<nav>
    {
        headerLevel === 'H2' && (
            <h2 class="text-lg text-theme-red-400 sm:text-xl md:text-2xl lg:text-3xl font-bold mt-2 mb-1 lg:mt-3 lg:mb-2">
                Categorías
            </h2>
        )
    }
    {headerLevel === 'H3' && <h3 class="text-xl font-medium">Categorías</h3>}
    <ul class="flex flex-row flex-wrap gap-2 mt-2 leading-relaxed">
        {
            categories.map(({ name, count }) => (
                <li>
                    <CategoryBadge
                        name={name}
                        count={count}
                        highlight={highlightedCategories.includes(name)}
                    />
                </li>
            ))
        }
    </ul>
</nav>
