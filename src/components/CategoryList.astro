---
import CategoryBadge from './CategoryBadge.astro';

interface Props {
    categories: { name: string; count: number }[];
    highlightedCategories?: string[];
}

const { categories, highlightedCategories = [] } = Astro.props;
---

<nav>
    <h3 class="text-xl font-medium">Categor√≠as</h3>
    <ul class="flex flex-row flex-wrap gap-2 mt-2">
        {
            categories.map(({ name, count }) => (
                <li>
                    <CategoryBadge
                        name={name}
                        count={count}
                        highlight={highlightedCategories.includes(name)}
                    />
                </li>
            ))
        }
    </ul>
</nav>
