---
import { FaRegClock } from 'react-icons/fa6';

interface Props {
    prepTime: number;
    cookTime: number;
}

const { prepTime, cookTime } = Astro.props;
---

<ul class="flex flex-row gap-2">
    <li class="border-r-2 border-theme-coral/80 pr-2">
        <article>
            <h1 class="text-xl font-semibold">Tiempo de preparaci√≥n</h1>
            <span class="flex flex-row items-center gap-2">
                <FaRegClock className="text-theme-red" />
                {prepTime} min
            </span>
        </article>
    </li>
    <li>
        <article>
            <h1 class="text-xl font-semibold">Tiempo de cocinado</h1>
            <span class="flex flex-row items-center gap-2">
                <FaRegClock className="text-theme-red" />
                {cookTime} min
            </span>
        </article>
    </li>
</ul>
